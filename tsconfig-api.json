{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
		"target": "esnext",
    "module": "esnext",
    "outDir": "api-dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"allowImportingTsExtensions": true,
		"noEmit": true,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/web/**/*",
    "src/testHelpers/**/*",
    "src/database/migrations/**/*",
    "src/database/seeds/**/*",
    "src/index.tsx",
    "src/setupTests.ts"
  ]
}
