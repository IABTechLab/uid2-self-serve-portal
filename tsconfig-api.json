{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "outDir": "api-dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "src/web/**/*",
    "src/testHelpers/**/*",
    "src/database/migrations/**/*",
    "src/database/seeds/**/*",
    "src/index.tsx",
    "src/setupTests.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
